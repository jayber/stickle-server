# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

POST        /api/user/:phoneNum                            controllers.UserController.register(phoneNum)
POST        /api/verification/:phoneNum        controllers.UserController.verify(phoneNum)
POST        /api/resend/:phoneNum              controllers.UserController.resend(phoneNum)
POST        /api/feedback        controllers.FeedbackController.feedback

GET         /api/ws                                        controllers.SocketController.get

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                              controllers.Assets.versioned(path="/public", file: Asset)
